<script>
  $(document).ready(function () {
    var animating = false;
    var lastScrollTop = $(document).scrollTop();
    var bannerOuterHeight = $(".tryout-banner").outerHeight();

    function scrollListener(){
      lastScrollTop = $(document).scrollTop();
      requestAnimation();
    }

    function updateBodyMargin(){
      bannerOuterHeight = $(".tryout-banner").outerHeight();
      $('body').css("margin-bottom", bannerOuterHeight + "px");
    }

    function requestAnimation(){
      if (!animating){
        animating = true;
        if (window.requestAnimationFrame){
          requestAnimationFrame(update);
        }
        else {
          update();
        }
      }
    }

    function update(){
      var windowHeight = $(window).height();
      if ((lastScrollTop + windowHeight) > ($("#about").offset().top + $("#about").height() + windowHeight*.12)){
        $(".tryout-banner").slideDown();
      }
      else {
        $(".tryout-banner").slideUp();
      }
      animating = false;
    }

    $(window).on('scroll touchmove touchstart',  scrollListener);
    $(window).resize(updateBodyMargin);
    updateBodyMargin();

  });
</script>
